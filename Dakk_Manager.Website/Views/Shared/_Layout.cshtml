<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/FrontEnd/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/FrontEnd/dist/css/adminlte.min.css">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand navbar-white border border-success border-5 ">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <img src="~/Content/images/CRO LOGO.jpg" style="width:50px;height:50px"/>
            </li>
            
            <li class="nav-item">
                <a href="~/Dakk_Data/Index" style="font-size:xx-large;color:#0a7639"><strong>Dakk Data</strong></a>
            </li>

        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">

            @if (User.IsInRole("Admin"))
            {
                <li style="margin-right:10px">
                    <a href="~/Account/Register" style="color:#0a7639"><strong>Register New User</strong></a>
                </li>
            }
            <li class="nav-item">
            <li class="nav-item d-none d-sm-inline-block">
                @Html.Partial("_LoginPartial")
            </li>
        </ul>

    </nav>

    <section class="content">
        <div class="card">
            <div class="card-body">
                @RenderBody()
            </div>

            <footer class="col-12" style="align-content:center">
                <strong>Copyright &copy; @DateTime.Now.Year <a class="text-success">Planning &amp; Developemnt Department</a>.</strong> Developed by Central Record Office Sindh - CRO (SGA &amp; CD)
            </footer>
        </div>


    </section>

    <script src="~/Content/FrontEnd/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/FrontEnd/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/FrontEnd/dist/js/adminlte.min.js"></script>


</body>
</html>

<style>
    ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

        ul.pagination li {
            display: inline;
        }

            ul.pagination li a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                border: solid;
            }

    a:link, a:any-link {
        color: #28a745;
        background-color: transparent;
        text-decoration: none;
    }
</style>